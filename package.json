{
  "name": "siheom-ts",
  "version": "0.1.0",
  "description": "Data first test interpreter for Frontend Testing",
  "keywords": [
    "test",
    "testing-library",
    "playwright",
    "typescript"
  ],
  "homepage": "https://github.com/twinstae/siheom-ts",
  "bugs": {
    "url": "https://github.com/twinstae/siheom-ts/issues"
  },
  "author": "Taehee Kim <rabolution@gmail.com> (https://x.com/stelo_kim)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/twinstae/siheom-ts.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "license": "MIT",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.1",
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.4",
    "@happy-dom/global-registrator": "^17.5.6",
    "@react-stately/utils": "^3.10.8",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.6",
    "@typescript/native-preview": "^7.0.0-dev.20250602.1",
    "@untitledui/icons": "^0.0.19",
    "@vitejs/plugin-react": "^4.5.0",
    "@vitest/browser": "^3.2.0",
    "accname": "^1.1.0",
    "happy-dom": "^17.5.6",
    "playwright": "^1.52.0",
    "react": "^19.1.0",
    "react-aria-components": "^1.13.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.18",
    "tsdown": "^0.12.6",
    "typescript": "^5.8.3",
    "valibot": "^1.1.0",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.0",
    "storybook": "^10.1.11",
    "@storybook/react-vite": "^10.1.11"
  },
  "scripts": {
    "ci": "bun run check-format && bun run build && bun run check-exports && bun run typecheck && bun test",
    "local-check": "bun run format && bun run build && bun run check-exports && bun run typecheck && bun run vitest --browser.enabled true",
    "vitest": "vitest",
    "typecheck": "tsgo",
    "check-format": "biome format src",
    "format": "biome format --write src",
    "check-exports": "attw --pack .",
    "build": "tsdown",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "main": "dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  }
}
